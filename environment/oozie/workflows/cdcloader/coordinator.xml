<?xml version="1.0" encoding="UTF-8"?>
<coordinator-app
	name='${oozie.job.name}'
	frequency='${oozie.coordinator.frequency}'
	start='${oozie.coordinator.starttime}'
	end='2099-01-01T00:00Z'
	timezone='Europe/London'
	xmlns='uri:oozie:coordinator:0.4'>
	<controls>
		<concurrency>1</concurrency>
	</controls>
	<action>
		<workflow>
			<app-path>${oozie.application.path}</app-path>
			<configuration>
                        <property>
                            <name>current.date</name>
                            <value>${coord:formatTime(coord:actualTime(), 'yyyy-MM-dd')}</value>
                        </property>
              </configuration>
		</workflow>
	</action>
</coordinator-app>
